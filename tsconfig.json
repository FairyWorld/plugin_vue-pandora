{
  "compilerOptions": {
    "target": "es6",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
    "jsx": "preserve",
    "noLib": false,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["packages"],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/**/*.stories.tsx",
    "**/**/*.md",
    "packages/_docs"
  ]
}
